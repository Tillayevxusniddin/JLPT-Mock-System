# =============================================================================
# JLPT Mock System â€“ Environment variables
# =============================================================================
# Copy this file to .env and fill in the values:
#   cp env.example .env
# (If your project uses .env.example instead, copy that to .env.)
# =============================================================================

# -----------------------------------------------------------------------------
# Django core
# -----------------------------------------------------------------------------
# Secret key (required in production). Use a long random string.
DJANGO_SECRET_KEY=your-secret-key-change-in-production
# Debug mode. Set False in production.
DJANGO_DEBUG=True
# Comma-separated list of allowed hosts (e.g. localhost,127.0.0.1,.mikan.uz,api.mikan.uz)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.mikan.uz,mikan.uz,api.mikan.uz

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_NAME=jlpt_mock_db
DB_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
DB_HOST=localhost
DB_PORT=5432
# Set False to disable SSL for DB (e.g. local dev). Production often uses True.
DB_REQUIRE_SSL=False

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
# Used for cache, Celery broker, and Channels (WebSockets).
REDIS_URL=redis://localhost:6379/0
# Optional Redis password (leave empty if none).
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Celery
# -----------------------------------------------------------------------------
# Broker and result backend. Defaults to REDIS_URL if not set.
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Frontend / CORS
# -----------------------------------------------------------------------------
# Base URL of the frontend (used in emails and links).
FRONTEND_URL_BASE=http://localhost:3000
# Production: comma-separated CORS origins (e.g. https://mikan.uz,https://api.mikan.uz).
# Leave empty to use defaults in settings.
CORS_ALLOWED_ORIGINS=
# Production: comma-separated CSRF trusted origins.
CSRF_TRUSTED_ORIGINS=
# Production: comma-separated ALLOWED_HOSTS (overrides DJANGO_ALLOWED_HOSTS in production).
ALLOWED_HOSTS=

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@mikan.uz
# Production admin contact (for error emails).
ADMIN_NAME=JLPT Admin
ADMIN_EMAIL=admin@mikan.uz

# -----------------------------------------------------------------------------
# Storage (S3-compatible)
# -----------------------------------------------------------------------------
# Set True to use S3 (or MinIO, etc.) for media/static. False = local files.
USE_S3=False
# When USE_S3=True, set these:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=mikan-media
# AWS_S3_REGION_NAME=us-east-1
# Optional: custom endpoint (e.g. MinIO: http://localhost:9000).
# AWS_S3_ENDPOINT_URL=
# Optional: custom domain for URLs.
# AWS_S3_CUSTOM_DOMAIN=
# Optional: ACL (use empty or None for buckets with ACLs disabled).
# AWS_DEFAULT_ACL=
# Set False for self-signed certificates.
# AWS_S3_VERIFY_SSL=True
# Signed URL expiry in seconds for sensitive media (default 3600).
# AWS_SENSITIVE_MEDIA_EXPIRE=3600

# -----------------------------------------------------------------------------
# Security (production)
# -----------------------------------------------------------------------------
# Production settings may also read SECRET_KEY; use same value as DJANGO_SECRET_KEY if needed.
# SECRET_KEY=your-secret-key-change-in-production
# Set False if Nginx handles HTTPS redirect.
# SECURE_SSL_REDIRECT=True

# -----------------------------------------------------------------------------
# Django Axes (login brute-force protection)
# -----------------------------------------------------------------------------
AXES_FAILURE_LIMIT=10
AXES_COOLOFF_TIME=1

# -----------------------------------------------------------------------------
# Chat (optional)
# -----------------------------------------------------------------------------
CHAT_MAX_ATTACHMENT_FILES=10
CHAT_MAX_ATTACHMENT_SIZE_MB=10

# -----------------------------------------------------------------------------
# Gunicorn (optional; used by deployment/systemd and Docker override)
# -----------------------------------------------------------------------------
# GUNICORN_BIND=127.0.0.1:8000
# GUNICORN_WORKERS=
# GUNICORN_LOG_LEVEL=info
# GUNICORN_LOG_DIR=
# GUNICORN_PRELOAD=false
